<div class="container">
    <header>
        <div class="dropdown navbar mb-3" style="padding-top: 1.5rem">
            <button onclick="myFunction()" class="dropbtn">Click Open</button>
            <div id="myDropdown" class="dropdown-content">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
                <a href="#">Link 4</a>
            </div>
        </div>
        <div class="navbar mb-1" style="padding-top: 1.5rem"><button class="headers" href="#">Button</button></div>
        <div class="dropdownHover navbar mb-3" style="padding-top: 1.5rem">
            <button class="dropHoverbtn">Hover Open</button>
            <div class="dropdownHover-content">
                @for (int i = 1; i < 5; i++)
                {
                    if (i % 2 == 0)
                    {
                        <p class="text-blue">Link @i</p>
                    }
                    else
                    {
                        <p class="text-black">Link @i</p>
                    }
                }
            </div>
        </div>
